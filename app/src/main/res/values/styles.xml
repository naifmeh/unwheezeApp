<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SubFabIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimaryDark</item>

    </style>

    <style name="titleLabels">
        <item name="android:textColor">@color/titleLabelColor</item>
        <item name="android:textSize">@dimen/titleMeasureLabel</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="measureValues">
        <item name="android:textColor">@color/valueLabelColor</item>
        <item name="android:textSize">@dimen/valueMeasureLabel</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
